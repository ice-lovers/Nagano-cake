<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3><strong>配送先登録/一覧</strong></h3>
      <%= form_with(model: @delivery, :url => {:controller => "customers/deliveries"}) do |f| %>
        <div class="form-group col-md-12">
          <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-md-3 control-label" %>
          <%= f.text_field :postal_code, class: "col-md-5 form-control-static postal_code" %>
        </div>

        <div class="form-group col-md-12">
          <%= f.label :"住所" ,class: "col-md-3 control-label" %>
          <%= f.text_field :address, class: "col-md-8 form-control-static address" %>
        </div>

        <div class="form-group col-md-12">
          <%= f.label :"宛名" ,class: "col-md-3 control-label" %>
          <%= f.text_field :name, class: "col-md-5 form-control-static name" %>
        </div>
          <%= f.submit '登録する' ,class: "col-md-2 pull-right btn-lg btn-success " %>
    </div>
       <% end %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @deliveries.each do |delivery| %>
          <tr>
            <td><%= delivery.postal_code %></td>
            <td><%= delivery.address %></td>
            <td><%= delivery.name %></td>
            <td>
              <%= link_to "編集する", edit_delivery_path(delivery), class: "glyphicon glyphicon-pencil btn-sm btn-primary" %>
              <%= link_to "削除する", delivery_path(delivery), method: :DELETE, data: {confirm: "本当に削除してもよろしいですか？"}, class: "glyphicon glyphicon-trash btn-sm btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>