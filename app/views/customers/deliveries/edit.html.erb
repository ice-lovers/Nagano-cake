<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3><strong>配送先編集</strong></h3>
      <%= form_with(model: @delivery, url:delivery_path, local: true , method: :patch) do |f| %>
      <div class="col-md-10">
        <div class="form-group col-md-10">
          <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-md-3 control-label" %>
          <%= f.text_field :postal_code, class: "col-md-4 form-control-static postal_code" %>
        </div>

        <div class="form-group col-md-10">
          <%= f.label :"住所" ,class: "col-md-3 control-label" %>
          <%= f.text_field :address, class: "col-md-7 form-control-static address" %>
        </div>

        <div class="form-group col-md-10">
          <%= f.label :"宛名" ,class: "col-md-3 control-label" %>
          <%= f.text_field :name, class: "col-md-4 form-control-static name" %>
        </div>
         <%= f.submit '編集する' ,class: "col-md-2 pull-right btn-lg btn-success " %>
      </div>
      <% end %>
  </div>
</div>