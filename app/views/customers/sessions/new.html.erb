<div class="container">
  <div class="row mb-5">
    <h4 class="col-md-2 offset-1 bg-light text-center">ログイン</h4>
  </div>
  <div class="row mb-3">
    <h6 class="bg-light offset-2">会員の方はこちらからログイン</h6>
  </div>

  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
    <div class="form-group row mb-5 justify-content-center">
      <%= f.label :email, "メールアドレス", class:"col-3 col-form-label" %>
      <%= f.text_field :email, class:"form-control col-4", autofocus:true, autocomplete: true %>
    </div>

    <div class="form-group row mb-5 justify-content-center">
      <%= f.label :password, "パスワード", class:"col-3 col-form-label" %>
      <%= f.password_field :password, class:"form-control col-4", autocomplete: "new-password" %>
    </div>

    <div class="row justify-content-center mb-3">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
  <% end %>

  <div class="row mb-3">
    <h6 class="bg-light offset-2">会員の方はこちらからログイン</h6>
  </div>

  <div class="row mb-5">
    <p class="offset-3"><%= link_to "こちら", new_customer_registration_path %> から新規登録してください。</p>
  </div>
</div>
