<div class="container">
  
     <div class="row ">
       <div class ="col-lg-12 d-flex align-items-center justify-content-between"> 
          <div class="d-flex align-items-center">
          <h4>
           <% if params[:category_id] %>
            <%= @category.name %> 一覧
           <% else %>
            全商品一覧
           <% end %>
         </h4>
         <h6>(全<%= @products.total_count %>件)</h6>
         </div>
         <%= render 'category', categories: @categories %> 
       </div>
     </div>
  
  <div class="row">
    <div class="col-lg-12 text-center">
        <div class="d-flex flex-wrap align-items-center ">
        <% @products.each do |product| %>
         <%= link_to product_path(product) do %>
        <div>
         <%= attachment_image_tag product, :image, fallback: "kanban_jyunbi.png", size:'250x250' %> 
        </div>
        <p class="text-dark"><%= product.name %></p>
        <p class="text-dark"><%= (product.price.to_i*1.1).round.to_s(:delimited) %>円</p>
        <% end %>
        <% end %>
        </div>
    </div>
  </div>
  
    <div class="row">
       <div class ="col-lg-12"> 
         <div class="text-center"><%= paginate @products %></div>
       </div>
     </div>
  
 </div>