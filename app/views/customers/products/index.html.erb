<div class="container">
  
     <div class="row my-4">
       <div class ="col-lg-12 d-flex align-items-center justify-content-between"> 
          <div class="d-flex align-items-center">
          <h4 class="my-2">
           <% if params[:category_id] %>
            <%= @category.name %> 一覧
           <% else %>
            全商品一覧
           <% end %>
         </h4>
         <h6 class="my-2">(全<%= @products.total_count %>件)</h6>
         </div>
         <%= render 'category', categories: @categories %> 
       </div>
     </div>

  <div class="row">
    <div class="col-lg-12 text-center">
        <div class="d-flex flex-wrap align-items-center">
        <% @products.each do |product| %>
         <%= link_to product_path(product) do %>
        <div class="card bg-light my-2 mx-2" style="width: 16rem">
        <div class="card-image-top py-3">
         <%= attachment_image_tag product, :image, fallback: "kanban_jyunbi.png", size:'225x200' %>
        </div>
        <p class="card-title text-dark"><%= product.name %></p>
        <p class="text-dark">¥<%= (product.price.to_i*1.1).round.to_s(:delimited) %></p>
        </div>
        <% end %>
        <% end %>
        </div>
    </div>
  </div>

    <div class="row my-4">
       <div class ="col-lg-12 d-flex justify-content-center">
         <%= paginate @products %>
       </div>
     </div>

 </div>