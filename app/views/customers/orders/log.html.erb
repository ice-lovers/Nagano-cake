<div class="container">
  <div class="row">
    <div class="col-xs-8">
    <h3>注文情報確認</h3>
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="order-info">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag(cart_item.product, :image, size:'40x60', fallback: "kanban_jyunbi.png" %>
              <%= cart_item.product.name %>
            </td>
            <td>
              <%= (cart_item.product.price.to_i*1.1).floor %>
            </td>
            <td>
              <%= cart_item.quantity %>
            </td>
            <td>
              <%= (cart_item.product.price.to_i*cart_item.quantity*1.1).floor %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-xs-4">
      <table class="table table-hover table-inverse table-bordered">
        <tr class="info">
        　<th>送料</th>
          <td>800</td>
        </tr>
        <tr class="info">
          <th>商品合計</th>
          <td><%= total_price(@cart_items).to_s(:delimited) %></td>
        </tr>
        <tr class="info">
          <th>請求金額</th>
          <td><%= 800 + total_price(@cart_items).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
    <div class="col-xs-8">
      <table>
        <tr>
          <th>支払方法</th>
          <td><%= @order.pay_type %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td><%= "#{@order.postal_code} #{@order.address} #{@order.name}" %></td>
        </tr>
      </table>
    </div>
    
  </div>
</div>
    
