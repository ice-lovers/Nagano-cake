<div class="container">
  <div class="row mb-5">
    <h4 class="col-md-3 offset-1 bg-light text-center">注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-8">
      <h5>注文情報</h5>
      <table class="table table-hover table-inverse table-bordered  align-top">
        <tr class="info">
        　<th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr class="info">
          <th>配送先</th>
          <td><%= @order.address %></td>
        </tr>
        <tr class="info">
          <th>支払方法</th>
          <td><%= @order.pay_type %></td>
        </tr>
        <tr class="info">
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-2">
      <h5>請求情報</h5>
      <table class="table table-hover table-inverse table-bordered  align-top">
        <tr class="info">
        　<th>商品合計</th>
          <td><%= @order.total_price %></td>
        </tr>
        <tr class="info">
          <th>配送料</th>
          <td><%= @order.delivery_charge %></td>
        </tr>
        <tr class="info">
          <th>ご請求額</th>
          <td><%= (@order.total_price + @order.delivery_charge).to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-8">
      <h5>注文内容</h5>
      <table class="table table-hover table-inverse table-bordered">
        <thead class="thead-light">
          <tr class="order-info">
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th style="width: 200px">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.product.name %>
            </td>
            <td class="align-middle">
              <%= ((order_detail.product.price.to_i*1.1).floor).to_s(:delimited) %>
            </td>
            <td class="align-middle">
              <%= order_detail.quantity %>
            </td>
            <td class="align-middle">
              <%= ((order_detail.product.price.to_i*order_detail.quantity*1.1).floor).to_s(:delimited) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>