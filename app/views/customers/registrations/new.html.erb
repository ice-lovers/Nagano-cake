<div class="container">
  <div class="row mb-5">
    <h4 class="col-md-3 offset-1 bg-light text-center">新規会員登録</h4>
    <%= flash[:error] %>
  </div>

  <%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customers', local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="form-group row mb-5">
      <%= f.label :name, "氏名", class:"col-3 col-form-label" %>
      <%= f.text_field :last_name, class:"form-control col-4", autofocus: true %>
      <%= f.text_field :first_name, class:"offset-1 form-control col-4" %>
    </div>
    <div class="form-group row mb-5">
      <%= f.label :name, "フリガナ", class:"col-3 col-form-label" %>
      <%= f.text_field :last_name_kana, class:"form-control col-4", autofocus: true %>
      <%= f.text_field :first_name_kana, class:"offset-1 form-control col-4" %>
    </div>
    <div class="form-group row mb-5">
      <%= f.label :postal_code, "郵便番号", class:"col-3 col-form-label" %>
      <%= f.text_field :postal_code, class:"form-control col-4", autofocus: true %>
    </div>
    <div class="form-group row mb-5">
      <%= f.label :address, "住所", class:"col-3 col-form-label" %>
      <%= f.text_field :address, class:"form-control col-8", autofocus: true %>
    </div>
    <div class="form-group row mb-5">
      <%= f.label :telephone_number, "電話番号", class:"col-3 col-form-label" %>
      <%= f.text_field :telephone_number, class:"form-control col-4", autofocus: true %>
    </div>
    <div class="form-group row mb-5">
      <%= f.label :email, "メールアドレス", class:"col-3 col-form-label" %>
      <%= f.text_field :email, class:"form-control col-4", autofocus:true, autocomplete: true %>
    </div>

    <div class="form-group row mb-5">
      <%= f.label :password, "パスワード(6文字以上)", class:"col-3 col-form-label" %>
      <%= f.password_field :password, class:"form-control col-4", autocomplete: "new-password" %>
    </div>

    <div class="form-group row mb-5">
      <%= f.label :password_confirmation, "パスワード(確認用)", class:"col-3 col-form-label" %><br />
      <%= f.password_field :password_confirmation, class:"form-control col-4", autocomplete: "new-password" %>
    </div>

    <div class="row mb-5">
      <%= f.submit "新規登録", class:"col-4 offset-3 btn btn-success" %>
    </div>

  <% end %>

  <div class="row">
    <h4 class="col-md-3 offset-1 bg-light text-center">すでに登録済みの方</h4>
  </div>
  <div class="row mb-5">
    <p class="offset-2"><%= link_to "こちら", new_customer_session_path %> からログインしてください。</p>
  </div>
</div>