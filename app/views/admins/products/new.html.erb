<div class="container">
  <div class="row">
    <div class="col">
    <h3 class="text-left">商品新規登録</h3>
    <%= form_with model: [:admins, @product], local:true do |f| %>
      <table>
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_field :detail %></td>
        </tr>
          <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "選択してください" %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :product_status, :true %>
            <%= f.label :product_status, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :product_status, :false %>
            <%= f.label :product_status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
          </td>
        </tr>
      </table>
      <%= f.submit '新規登録' %>
    <% end %>  
     </div>
    </div>
  </div>