<div class="container">
     <div class="row">
          <h4 calss="bg-light text-left">商品一覧</h4>
          <%= link_to new_admins_product_path do %>
          <span class="text-right"><i class="fas fa-plus-circle"></i></span>
          <% end %>
     </div>
     
     <div class="row">
         <div class ="col-lg-12">          
              <table class ="table table-hover">
                <thead class="thead-light">
                  <tr>
                    <th style="width: 10%">商品ID</th>
                    <th style="width: 30%">商品名</th>
                    <th style="width: 20%">税抜価格</th>
                    <th style="width: 20%">ジャンル</th>
                    <th style="width: 20%">ステータス</th>
                  </tr>
                </thead>
                <tbody>
                  <% @products.each do |product| %>
                  <tr>
                    <td><%= product.id %></td>
                    <td><%= link_to product.name,admins_product_path(product.id) %></td>
                    <td><%= product.price.to_s(:delimited) %>円</td>
                    <td><%= product.category.name %></td>
                    <td>
                      <% if product.product_status == true %>
                      <span class="text-success"><i class="far fa-circle"></i> 販売中</span>
                      <% elsif product.product_status == false %>
                      <span class="text-black-50"><i class="fas fa-times"></i> 販売停止中</span>
                      <% end %>
          　　　　　　　　　</td>
                    <th>
                  </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
    <div class="row">
      <div class="text-center"><%= paginate @products %></div>
    </div>
</div>