<div class="container">
   <div class="row my-4">
       <div class ="col-lg-12 d-flex align-items-center justify-content-between"> 
          <h4 class="bg-light px-3 ml-4">商品一覧</h4>
          <%= link_to new_admins_product_path do %>
          <h5 class="text-body"><i class="fas fa-plus-circle"></i>新規商品登録</h5>
          <% end %>
       </div>
     </div>
     
     <div class="row mb-3">
         <div class ="col-lg-12">          
              <table class ="table table-hover">
                <thead class="thead-light">
                  <tr>
                    <th style="width: 10%">商品ID</th>
                    <th style="width: 30%">商品名</th>
                    <th style="width: 20%">税抜価格</th>
                    <th style="width: 25%">ジャンル</th>
                    <th style="width: 15%">ステータス</th>
                  </tr>
                </thead>
                <tbody>
                  <% @products.each do |product| %>
                  <tr>
                    <td class="align-middle"><%= product.id %></td>
                    <td class="align-middle"><%= link_to product.name, admins_product_path(product.id) %></td>
                    <td class="align-middle"><%= product.price.to_s(:delimited) %>円</td>
                    <td class="align-middle"><%= product.category.name %></td>
                    <td class="align-middle">
                      <% if product.product_status == true %>
                      <span class="text-success"><i class="far fa-circle"></i> 販売中</span>
                      <% elsif product.product_status == false %>
                      <span class="text-black-50"><i class="fas fa-times"></i> 販売停止中</span>
                      <% end %>
          　　　　　　　　　</td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
        </div>
    </div>
    
    <div class="row">
      <div class ="col-lg-12">
        <div class="text-center"><%= paginate @products %></div>
      </div>
    </div>
    
</div>