<div class="container">
  <div class="row">
    <h4 class="bg-light">商品編集</h4>
    <div class="col-lg-12">
     <%= form_with model: [:admins, @product], local:true do |f| %>
      <table class="mx-auto">
        <tr>
          <td>商品画像</td>
          <td><%= f.attachment_field :image%></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name, placeholder: "商品名", size: 50 %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :detail, placeholder: "ここに説明文を記述します", size: "50x8" %></td>
        </tr>
          <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "---選択してください---" %></td>
        </tr>
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, placeholder: "1000", size: 50 %>円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.radio_button :product_status, :true %>
            <%= f.label :product_status, "販売中", {value: :true, style: "display: inline-block;"} %>
            <%= f.radio_button :product_status, :false %>
            <%= f.label :product_status, "販売停止中", {value: :false, style: "display: inline-block;"} %>
          </td>
        </tr>
      </table>
      <%= f.submit '変更を保存', class: "btn btn-success btn-lg d-block mx-auto" %>
    <% end %>
     </div>
    </div>
  </div>
  