<div class="container">
  <div class="row">
    <h4 class="col-md-4 bg-light text-center">注文履歴一覧</h4>
  </div>

  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table table-striped">
        <thead>
          <tr class="order-info">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M:%S"), admins_order_path(order.id), :style=>"color:black;" %></td>
            <td><%= order.name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.order_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>