<div class="container">
  <div class="row">
  　<h4 class="col-md-3 bg-light text-center">注文履歴詳細</h4>
  </div>


  <div class="row">
    <div class="col-12 text-left">
    <table>
      <tr>
        <th><h5>購入者</h5></th>
          <td>
          　<%= link_to @order.name, admins_customer_path(@order.id), :style=>"color:black;" %>
          </td>
    　</tr>
      <tr>
        <th><h5>注文日</h5></th>
          <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <th><h5>配送先</h5></th>
          <td rowspan="2">〒<%= @order.postal_code %>  <%= @order.address %><br>
              <div class="text-left"><%= @order.name %></div>
　　　　　　</td>
          </div>
    　</tr>
    　<tr>
    　  <th>
    　    <td></td>
    　  </th>
    　</tr>
      <tr>
        <th><h5>支払方法</h5></th>
          <td><%= @order.pay_type %></td>
    　</tr>

        <tr>
          <th width="200"><h5>注文ステータス</h5></th>
            <td>
              <%= form_with model:@order, url:'/admins/orders/:id', local: true do |f| %>
              <%= f.select :order_status, Order.order_statuses.keys, class: "order_status-select" %>
              <%= f.submit "更新", class:"btn btn-success" %>
              <% end %>
            </td>
        </tr>
    </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8 text-left">
      <table class="table table-striped">
        <thead>
          <tr class="order-info">
            <th width="200">商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.product.name %></td>
            <td><%= order_detail.price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= (order_detail.price * order_detail.quantity).floor.to_s(:delimited) %></td>
            <td><%= form_with model: @order_details, local: true do |f| %>
                <%= f.select :production_status, OrderDetail.production_statuses.keys, class: "order_detail_status-select" %></td>
            <td><%= f.submit "更新", class:"btn btn-success" %></td>
                <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <div class="float-right">
      <table>
        <tr>
          <th width="120">商品合計</th>
          <td align="right"><%= @order.total_price.to_s(:delimited) %>円</td>
        </tr>
        <tr>
          <th width="120">送料</th>
          <td align="right"><%= @order.delivery_charge %>円</td>
        </tr>
        <tr>
          <th width="120">請求金額合計</th>
          <td align="right"><%= (@order.delivery_charge + @order.total_price).to_s(:delimited) %>円</td>
        </tr>
      </table>
    </div>
    </div>
  </div>
</div>






