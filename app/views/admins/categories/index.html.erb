<div class="container">
  <div class="row mb-5">
    <h4 class="col-md-3 offset-1 bg-light text-center">ジャンル一覧・追加</h4>
  </div>

  <%= form_with model:[:admins, @category], local:true do |f| %>
    <div class="form-group row mb-5">
      <%= f.label :name, "ジャンル名", class:"col-2 col-form-label" %>
      <%= f.text_field :name, placeholder:"ジャンル名", class:"form-control col-4", autofocus:true %>
      <%= f.submit "新規投稿", class:"offset-1 btn btn-success" %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-5">
      <table class="table table-striped">
        <thead>
          <tr>
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <% @categories.each do |category| %>
        <tr class="border-bottom">
          <th class="align-middle"><%= category.name %></th>
          <th class="text-right"><%= link_to "編集する", edit_admins_category_path(category.id), class:"btn btn-success" %></th>
        </tr>
        <% end %>
      </table>

    </div>
  </div>


</div>
