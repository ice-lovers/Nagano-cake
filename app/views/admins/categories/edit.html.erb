<div class="container">
  <div class="row mb-5">
    <h4 class="col-md-3 offset-1 bg-light text-center">ジャンル編集</h4>
  </div>

  <%= form_with model:[:admins, @category], local:true do |f| %>
    <div class="form-group row mb-5">
      <%= f.label :name, "ジャンル名", class:"col-2 col-form-label" %>
      <%= f.text_field :name, class:"form-control col-4", autofocus:true %>
      <%= f.submit "変更を保存", class:"offset-1 btn btn-success" %>
    </div>
  <% end %>
</div>

